.base {
    width: 100%;
    height: 500rpx;
    position: fixed;
    bottom: 0;
    background: #e5e5e5;
}
.base>view:first-child {
    height: 80rpx;
    width: 100%;
    background: #ed414a;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
}

.base>view:last-child {
    height: 80rpx;
    width: 100%;
    margin-top: 20rpx;
    color: #333;
    text-align: center;
    background: #fff;
    line-height: 80rpx;
    font-size: 30rpx;
}
.array {
    width: 100%;
    height: 300rpx;
    max-height: 320rpx;
    overflow: scroll;
}

.array view {
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    color: #333;
    font-size: 30rpx;
    background: #fff;
    text-align: center;
    border-bottom: 1rpx solid #e5e5e5;
}