

.container {
  /*font-size: 32rpx;*/
}
.title {
  padding: 10rpx 40rpx;
}
.title>view:first-child {
  margin-bottom: 20rpx;
}
.head {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
  line-height: 200rpx;
  color: #ddd;
  /* background: #2F72FF; */
  margin: 40rpx auto 20rpx;
  box-shadow: 00rpx 20rpx 20rpx #CBDAFA;
}

.iptbox {
  padding: 0 40rpx 40rpx;
}
.iptbox input{
  border-bottom: 1px solid #eaeaea;
  padding: 15rpx 0;
  margin-top: 5rpx;
}
.selipt {
  border-bottom: 1px solid #eaeaea;
  padding: 10rpx 0;
  margin-top: 5rpx;
}

.checkbox {
  display: flex;
  align-items: center;
}
.checkitem {
  display: flex;
  align-items: center;
  width: 30%;
}
.checkitem >text:last-child{
  margin-left: 30rpx;
}
.yun {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #ddd;
}


.btn {
  height: 100rpx;
  width: 670rpx;
  margin: 100rpx auto 30rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  line-height: 100rpx;
  box-shadow: 10rpx 10rpx 10rpx #CBDAFA;
}

