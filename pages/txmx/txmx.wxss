/* pages/xsddmx/xsddmx.wxss */

.container {
  background: #fff;
}
.tabs {
  display: flex;
  align-items: baseline;
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx 0 20rpx 30rpx;
}
.tabs > view {
  position: relative;
  margin-right: 20rpx;
}
.tabs > .active {
  color: #000;
  font-size: 48rpx;
}
.byun {
  position: absolute;
  width: 20rpx;  
  height: 20rpx;  
  background-color: #2F72FF;  
  border-radius: 20rpx 20rpx 0 0;  
  height: 10rpx; 
  bottom: -20rpx;
  left: 40rpx;
}
.cardbox {
  width: 700rpx;
  margin: 30rpx auto;
  border-radius: 20rpx;
  box-shadow: 0 0 50rpx #ddd;
  padding: 30rpx;
  text-align: center;
}

.carditem {
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  padding-top: 30rpx;
  margin-top: 30rpx;
}
.money {
  font-size: 60rpx;
  margin-top: 30rpx;
}

.btn {
  height: 100rpx;
  width: 670rpx;
  margin: 120rpx auto 80rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  background: #2F72FF;
  line-height: 100rpx;
  box-shadow: 0 10rpx 10rpx #CBDAFA;
}

.footer {
  padding: 0 30rpx;
  line-height: 44rpx;
}

.items {
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  border-bottom: 1px solid #f5f5f5;
  padding: 30rpx;
}
.items:last-child {
  border: none;
}