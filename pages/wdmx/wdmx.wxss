.container {
  background: #fff;
}
.tabs {
  display: flex;
  align-items: baseline;
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx 0 20rpx 30rpx;
}
.tabs > view {
  position: relative;
  margin-right: 20rpx;
}
.tabs > .active {
  color: #000;
  font-size: 48rpx;
}
.byun {
  position: absolute;
  width: 20rpx;  
  height: 20rpx;  
  background-color: #2F72FF;  
  border-radius: 20rpx 20rpx 0 0;  
  height: 10rpx; 
  bottom: -20rpx;
  left: 40rpx;
}

.itembox {
  padding-top: 30rpx;
}
.items {
  padding: 30rpx;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
}
.items:last-child {
  border: none;
}
.items > image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.center {
  flex: 1;
  padding: 0 20rpx;
  line-height: 50rpx;
}
.right {
  padding-top: 10rpx;
}
.mgr10 {
  margin-right: 20rpx;
}
.icon {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  margin-left: 10rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 36rpx;
  text-align: center;
}
.flc {
  display: flex;
  align-items: center;
}