
.container {
}
.title {
  padding: 100rpx 40rpx;
}
.title>view:first-child {
  margin-bottom: 20rpx;
}
.iconitem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  margin: 0 40rpx;
  border-bottom: 1px solid #eaeaea;
}
.yun {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #cfcfcf;
}

.bgc {
  height: 100rpx;
  width: 670rpx;
  margin: 350rpx auto 0;
  color: #fff;
  font-size: 36rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 100rpx;
}


.wxpopup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
  z-index: 99;
}
.popupcontainer {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 25rpx;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
  text-align: center;
  padding: 40rpx 0; 
  z-index: 100;  
}
.poptitle {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  padding: 10rpx 0;
}
.imgbox {
  width: 250rpx;
  height: 300rpx;
  margin: 0 auto;
}
.popbtn {
  height: 100rpx;
  width: 80%;
  margin: 30rpx auto 0;
  border-radius: 20rpx;
  line-height: 100rpx;
  border: 1px solid #2F72FF;
  color: #2F72FF;
}